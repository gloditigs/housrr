    <div class="content1">
        <!-- Booking Modal -->
        <div class="booking-modal" id="bookingModal">
            <h2>Book Your Stay</h2>

            <!-- Booking Form -->
            <form action="/property/<%= property._id %>/enquire" method="POST">
                <!-- Name & Surname -->
                <div class="form-group booking-step">
                    <label for="fullName">Name & Surname:</label>
                    <input class="input"
                    type="text" id="name" name="name" placeholder="Enter Your Name" required
                    >
                </div>

                <!-- Contact Information -->
                <div class="form-group booking-step">
                    <label for="contactNumber">Contact Number:</label>
                    <input class="input"
                    type="text" id="contactNumber" name="contactNumber"
                        placeholder="Enter your contact number" 
                        required >
                </div>

                <div class="form-group booking-step">
                    <label for="email">Email:</label>
                    <input class="input"
                    type="email" id="email" name="email"
                        placeholder="Enter your email address" 
                        required
                    >
                </div>

                <!-- Pickup & Drop-off Dates -->
                <div class="form-group booking-step">
                    <label for="pickupDate">Check In:</label>
                    <input class="input"
                    type="date" id="checkInDate" name="checkInDate"
                        required
                    >
                </div>

                <div class="form-group booking-step">
                    <label for="dropoffDate">Check Out</label>
                    <input class="input"
                    type="date" id="checkOutDate" name="checkOutDate"
                        required
                    >
                </div>

                <!-- Number of Guests -->
                <div class="form-group booking-step">
                    <label for="guestCount">Number of Guests:</label>
                    <input class="input"
                    type="number" id="numberOfGuests" name="numberOfGuests" min="1"
                        required
                    >
                </div>

                <!-- Additional Requests/Notes -->
                <div class="form-group booking-step">
                    <label for="additionalRequests">Additional Requests/Notes:</label>
                    <textarea class="input"
                    id="additionalRequests" name="additionalRequests"
                        placeholder="Enter any additional requests or notes"
                    ></textarea>
                </div>

                <!-- Price on Request Display -->
                <p class="price-por">Price: <strong>Price on Request</strong></p>

                <!-- Hidden Input for Apartment ID -->
              

                <!-- Booking Buttons -->
                <div class="booking-modal-actions">
                    <button type="submit" class="btn btn-primary">
                        Request Price
                    </button>
                </div>
            </form>
        </div>
    </div>
