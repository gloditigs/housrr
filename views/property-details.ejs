/* Modal container styles */
.modal {
  position: fixed;
  inset: 0;
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* Modal backdrop */
.modal-backdrop {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.5);
}

/* Modal content */
.modal-content {
  position: relative;
  background: white;
  border-radius: 8px;
  width: 90%;
  max-width: 500px;
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
  overflow: hidden;
  animation: fadeIn 0.3s ease-in-out;
}

/* Modal header */
.modal-header {
  display: flex;
  align-items: center;
  padding: 20px;
}

.modal-icon {
  flex-shrink: 0;
  width: 48px;
  height: 48px;
  background: #ffe6e6;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 15px;
}

.modal-icon svg {
  width: 24px;
  height: 24px;
  color: black;
