}

.btn:focus {
  outline: none;
}


.btn-secondary {
  background: #f4f4f4;
  color: #333;
}

.hidden {
  display: none;
}

/* Fade-in animation */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}


